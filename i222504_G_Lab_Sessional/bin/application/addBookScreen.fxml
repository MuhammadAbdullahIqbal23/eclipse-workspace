<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>


<BorderPane BorderPane.alignment="CENTER">
         <center>
            <VBox prefHeight="416.0" prefWidth="210.0">
               <children>
                  <Label alignment="CENTER" prefHeight="18.0" prefWidth="258.0" text="Add Book" textAlignment="CENTER" />
                  <Label text="Title" />
                  <TextField fx:id="titleField" />
                  <Label text="Author" />
                  <TextField fx:id="authorField" />
                  <Label text="ISBN" />
                  <TextField fx:id="isbnField" />
                  <Label text="Availability" />
                  <TextField fx:id="availabilityField" />
               </children>
            </VBox>
         </center>
         <bottom>
            <Button mnemonicParsing="false" onAction="#handleAddBook" prefHeight="41.0" prefWidth="67.0" text="Submit" BorderPane.alignment="CENTER" />
         </bottom>
      </BorderPane>
